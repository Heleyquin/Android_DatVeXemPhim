<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DatVeXemPhim"
        tools:ignore="AppLinkUrlError"
        tools:targetApi="34">
        <activity
            android:name=".Activity.SettingFragment.Detail_Account"
            android:exported="false" />
        <activity
            android:name=".Activity.SettingFragment.History"
            android:exported="false" />
        <activity
            android:name=".Activity.SettingFragment.User"
            android:exported="false" />
        <activity
            android:name=".Activity.RapFragment.ByRap_Movie_Detail"
            android:exported="false" />
        <activity
            android:name=".Activity.RapFragment.PhimByRap"
            android:exported="false" />
        <activity
            android:name=".Activity.ForAll.ChonGhe"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="demozpdk"
                    android:host="app" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.PhimFragment.Movie_Detail"
            android:exported="false" />
        <activity
            android:name=".Activity.ForAll.Home"
            android:exported="false" />
        <activity
            android:name=".Activity.ForAll.SignUp"
            android:exported="false" />
        <activity
            android:name=".Activity.ForAll.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <queries>
        <package android:name="vn.com.vng.zalopay" />
        <package android:name="vn.com.vng.zalopay.sbmc" />
    </queries>
</manifest>